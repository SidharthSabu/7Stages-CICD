pipeline {
  agent any
  stages {
    stage('Build') {
      steps { echo 'Stage 1: Build — Maven' }
    }
    stage('Unit & Integration Tests') {
      steps { echo 'Stage 2: Unit & Integration Tests — JUnit' }
    }
    stage('Code Analysis') {
      steps { echo 'Stage 3: Code Analysis — SonarQube' }
    }
    stage('Security Scan') {
      steps { echo 'Stage 4: Security Scan — OWASP ZAP' }
    }
    stage('Deploy to Staging') {
      steps { echo 'Stage 5: Deploy to Staging — AWS EC2' }
    }
    stage('Integration Tests on Staging') {
      steps { echo 'Stage 6: Integration Tests — Selenium' }
    }
    stage('Deploy to Production') {
      steps { echo 'Stage 7: Deploy to Production — Blue-Green' }
    }
  }
}
